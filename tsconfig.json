{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "ESNext"],
      "jsx": "react",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "../../build/core",
      "importHelpers": true,
      "downlevelIteration": true,
      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "src*": ["./src*"],
      },
      "typeRoots": [
        "./node_modules/@types",
      ],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/*.test.ts*", "src/**/*.stories.ts*"]
  }
  